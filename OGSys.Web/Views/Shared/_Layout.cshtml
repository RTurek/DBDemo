<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OGSys Demo App</title>
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="description" content="OGSys Demo Application" />
</head>
<body>
    <section id="top-nav-bar">
        @Html.Partial("_TopBar")
    </section>

    <section id="content" style="min-height:800px">
        <div class="row" style="min-height:800px">
            <div class="large-12 column" style="background-color:white;border: 1px solid #cccccc;min-height:800px">
                <div style="margin:2.5%; min-height:800px">
                    @RenderBody()
                </div>
            </div>
            <div class="large-12 column" style="background-color:white;border: 1px solid #cccccc;">
                <div style="margin:2.5%;">
                    <section id="footer" style="margin-bottom:15px;">
                        @Html.Partial("_Footer")
                    </section>
                </div>
            </div>
        </div>
    </section>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/foundation")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/foundation/foundation.js"></script>
    <script src="~/Scripts/foundation/foundation.topbar.js"></script>

    <script>
        $(document).foundation();
    </script>
</body>
</html>
