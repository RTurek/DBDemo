<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Customer Manager Demo</title>
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <section id="top-nav-bar">
        @Html.Partial("_TopBar")
    </section>

    <section id="content">
        <div class="row">
            <div class="large-12 column" style="background-color:white;border: 1px solid #cccccc; box-shadow: black 10px; mso-border-shadow: yes">
                <div style="margin:25px">
                    @RenderBody()
                    <hr />
                    <section id="footer" style="margin-bottom:50px;">
                        @Html.Partial("_Footer")
                    </section>
                </div>
            </div>
        </div>
    </section>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/foundation")
    @RenderSection("scripts", required: false)
    
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/foundation/foundation.js"></script>
    <script src="~/Scripts/foundation/foundation.topbar.js"></script>

    <script>
            $(document).foundation();
    </script>
</body>
</html>
