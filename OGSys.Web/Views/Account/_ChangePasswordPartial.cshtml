@using Microsoft.AspNet.Identity
@model OGSys.Web.Models.ManageUserViewModel




<div class="row" style="margin-bottom: 10px">
    <div>
        <hr />
        <span>You're logged in as <strong>@User.Identity.GetUserName()</strong>. </span><span class="text-success">@ViewBag.StatusMessage</span>
        <hr />
    </div>
</div>

<div class="medium-6 column">
    <div class="contentBox has-shadow">
        <section id="changePassword">
            @using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Change Password</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="row">
                    @Html.LabelFor(m => m.OldPassword, new { @class = "medium-6 column control-label" })
                    <div class="medium-6 column">
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "medium-6 column control-label" })
                    <div class="medium-6 column">
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "medium-6 column control-label" })
                    <div class="medium-6 column">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row">
                    <div class="medium-12 column">
                        <input type="submit" value="Change password" class="small button right" />
                    </div>
                </div>
            }

        </section>
    </div>
</div>